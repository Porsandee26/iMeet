
<?php
 
/*
 * connection database
 */
$Connect = mysql_connect('192.168.2.219', 'sa', 'sa') or die('Error connecting to MySQL');
mysql_select_db('meethrd', $Connect) or die('Database sysapp does not exist!');
mysql_query('SET NAMES UTF8');
/*
 * check POST
 */
$destination_id = isset($_POST['destination']) ? $_POST['destination'] : "";
$Query = mysql_query("SELECT * FROM province WHERE geo_id='{$destination_id}'");
$Rows = mysql_num_rows($Query);
if ($Rows > 0) {
    while ($Result = mysql_fetch_array($Query)) {
        echo "<option value=\"" . $Result['province_id'] . "\">" . $Result['province_name'] . "</option>";
    }
}else{
    echo "<option value=\"\">ไม่มีจังหวัดในหมวดหมู่ที่เลือก</option>";
}